# ======================================
# Executive Car SP - .htaccess Otimizado
# ======================================

# Habilita módulos
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
</IfModule>

# ======================================
# SEGURANÇA
# ======================================

# Bloqueia acesso a arquivos sensíveis
<FilesMatch "\.(env|json|md|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloqueia acesso a diretórios sensíveis
<DirectoryMatch "^.*(\\|/)\.">
    Order allow,deny
    Deny from all
</DirectoryMatch>

<DirectoryMatch "^.*(config|includes|controllers|views|data|logs)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# ======================================
# REDIRECIONAMENTOS
# ======================================

<IfModule mod_rewrite.c>
    
    # Remove .php das URLs (redirecionamento permanente)
    RewriteCond %{THE_REQUEST} /([a-zA-Z0-9\-./]+)\.php [NC]
    RewriteRule ^ /%1 [NE,L,R=301]
    
    # Redireciona de www para www (garante consistência)
    RewriteCond %{HTTP_HOST} !^www\. [NC]
    RewriteCond %{HTTP_HOST} !^localhost [NC]
    RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # HTTPS - Força HTTPS em produção
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} !^localhost [NC]
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Trailing slash - Remove trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.+)/$ /$1 [L,R=301]
    
    # ======================================
    # ROUTER - Roteia para index.php
    # ======================================
    
    # Não processa requisições de arquivos/diretórios reais
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Roteia tudo para index.php com parâmetro page
    RewriteRule ^(.*)$ index.php?page=$1 [QSA,L]
    
</IfModule>

# ======================================
# PERFORMANCE
# ======================================

# Compressão Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache Headers - Navegador
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS e JS
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # HTML e XML
    ExpiresByType text/html "access plus 24 hours"
    ExpiresByType text/xml "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType application/rss+xml "access plus 1 hour"
    
    # Default
    ExpiresDefault "access plus 1 month"
</IfModule>

# Cache Control Headers (mais específico)
<IfModule mod_headers.c>
    
    # Cache imagens por 1 ano
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|ico|webp)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cache CSS/JS por 1 mês
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # Cache fontes por 1 ano
    <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Não cachear HTML
    <FilesMatch "\.html?$">
        Header set Cache-Control "max-age=3600, must-revalidate"
    </FilesMatch>
    
    # Adiciona headers de segurança
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
</IfModule>

# ======================================
# TIPOS MIME
# ======================================

<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddType image/svg+xml svg svgz
    AddEncoding gzip svgz
    AddType text/plain .md
    AddType application/json json
    AddType application/xml xml
    AddType application/rss+xml rss
    AddType application/atom+xml atom
</IfModule>

# ======================================
# ERROR HANDLING
# ======================================

ErrorDocument 404 /index.php?page=erro-404
ErrorDocument 403 /index.php?page=erro-404
ErrorDocument 500 /index.php?page=erro-404

# ======================================
# PROTEÇÃO
# ======================================

# Disable directory listing
Options -Indexes

# Protege arquivo .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>
